<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:background="@color/colorPrimary"
        app:layout_constraintVertical_chainStyle="packed">

    <TextView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:id="@+id/logoTxt"
            android:text="Pizza Time"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="70dp"
            android:textColor="@android:color/white"
            android:textSize="50dp"/>

    <EditText
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:id="@+id/emailEdtTxt"
            app:layout_constraintTop_toBottomOf="@+id/logoTxt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:backgroundTint="@android:color/white"
            android:hint="hola@you.com"
            android:textColor="@android:color/white"/>

    <EditText
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:id="@+id/passEdtTxt"
            app:layout_constraintTop_toBottomOf="@+id/emailEdtTxt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:backgroundTint="@android:color/white"
            android:hint="Password"
            android:textColor="@android:color/white"/>

    <Button
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:id="@+id/loginBtn"
            app:layout_constraintTop_toBottomOf="@+id/passEdtTxt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="60dp"
            android:text="Login"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"
            android:textSize="15sp"/>

    <TextView
            android:layout_width="368dp"
            android:layout_height="54dp"
            android:id="@+id/tvRegister"
            app:layout_constraintTop_toBottomOf="@+id/loginBtn"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="30dp"
            android:text="No account yet? Create one"
            android:textColor="@android:color/white"
            android:textAlignment="center"
    />

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox"
            app:layout_constraintTop_toBottomOf="@id/passEdtTxt"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/passwordShow"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:layout_marginLeft="10dp"
    />

</android.support.constraint.ConstraintLayout>