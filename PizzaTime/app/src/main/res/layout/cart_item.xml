<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="3dp"
        xmlns:app="http://schemas.android.com/tools"
        app:ignore="NamespaceTypo">
    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
                android:id="@+id/iv"
                android:background="@drawable/pizza"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/tvTitleCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum"
                android:textSize="16sp"
                android:textStyle="bold"
                android:lines="2"
                android:maxLines="2"
                android:maxWidth="250dp"
                android:ellipsize="end"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toRightOf="@id/iv"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/tvCompositionCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum"
                android:textSize="14sp"
                android:maxLines="3"
                android:maxWidth="100dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintLeft_toRightOf="@id/iv"
                app:layout_constraintTop_toBottomOf="@id/tvTitleCart"/>

        <ImageView
                android:id="@+id/minusCart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_remove_black_24dp"
                app:layout_constraintLeft_toRightOf="@id/tvTitleCart"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="22dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/amntCart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toRightOf="@id/minusCart"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="22dp"
                android:backgroundTint="#CBD1CD"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
                android:id="@+id/addCart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_add_black_24dp"
                app:layout_constraintLeft_toRightOf="@id/amntCart"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="22dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:id="@+id/tvRemoveCart"
                android:layout_width="80dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/amntCart"
                app:layout_constraintLeft_toRightOf="@id/tvCompositionCart"
                android:layout_marginLeft="70dp"
                android:text="Remove"
                android:textColor="@android:color/holo_red_light"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
