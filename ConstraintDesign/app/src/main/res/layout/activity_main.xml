<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saltanat.constraintdesign.MainActivity"
    android:background="@color/back">

    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/logoTxt"
        android:text="famous"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="70dp"
        android:textColor="@android:color/white"
        android:textSize="50dp"/>

    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/emailTxtView"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/logoTxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        android:text="Email"
        android:textSize="18sp" />

    <EditText
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/emailEdtTxt"
        app:layout_constraintTop_toBottomOf="@+id/emailTxtView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:backgroundTint="@android:color/white"
        android:hint="hola@you.com"
        android:textColor="@android:color/white"/>

    <EditText
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/passEdtTxt"
        app:layout_constraintTop_toBottomOf="@+id/emailEdtTxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:backgroundTint="@android:color/white"
        android:hint="Password"
        android:textColor="@android:color/darker_gray"/>

    <Button
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/loginBtn"
        app:layout_constraintTop_toBottomOf="@+id/passEdtTxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="368dp"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/loginBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:text="No account yet? Create one"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        />
</android.support.constraint.ConstraintLayout>
